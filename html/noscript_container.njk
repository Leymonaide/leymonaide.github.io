<noscript>
    {# Lazy minification on this CSS: #}
    <style>{% filter minifyCss() %}
        .noscript-message {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%
        }{% endfilter %}</style>
    <div class="noscript-message" lang="en">
        <h1>JavaScript is disabled in your browser.</h1>
        <p>
            This website requires JavaScript to be enabled in order to work.
            Please enable JavaScript for this page and try again.
        </p>
    </div>
</noscript>